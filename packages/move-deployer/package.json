{
  "name": "@tortoise-os/move-deployer",
  "version": "0.2.0",
  "description": "Hot reload system for Move contracts - generates TypeScript types from deployments",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "bin": {
    "move-deployer": "./src/cli.ts"
  },
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    }
  },
  "files": [
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "echo 'No build needed - Bun uses TypeScript directly'",
    "test": "bun test"
  },
  "dependencies": {
    "@tortoise-os/core": "workspace:*"
  },
  "keywords": [
    "sui",
    "move",
    "code-generation",
    "hot-reload",
    "tortoise-os",
    "cli"
  ],
  "author": "TortoiseOS Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tortoise-os/bun-move.git",
    "directory": "packages/move-deployer"
  },
  "homepage": "https://github.com/tortoise-os/bun-move/tree/main/packages/move-deployer",
  "bugs": {
    "url": "https://github.com/tortoise-os/bun-move/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}
