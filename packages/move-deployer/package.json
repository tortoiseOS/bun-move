{
  "name": "@bun-move/move-deployer",
  "version": "0.1.0",
  "description": "Hot reload system for Move contracts - generates TypeScript types from deployments",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "bin": {
    "move-deployer": "./src/cli.ts"
  },
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "echo 'No build needed - Bun uses TypeScript directly'",
    "test": "bun test"
  },
  "dependencies": {
    "@bun-move/core": "workspace:*"
  },
  "keywords": [
    "sui",
    "move",
    "code-generation",
    "hot-reload"
  ],
  "license": "MIT"
}
